<odoo>
  <data>

    <!-- COMPANY -->
    <record model="ir.ui.view" id="company_ruc_form_view">
      <field name="name">company.ruc</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="attributes">
          <attribute name="placeholder">RazÃ³n Social</attribute>
        </xpath>
        <field name="partner_id" position="after">
          <field name="ruc"/>
          <field name="namerl"/>
          <field name="ollc"/>
        </field>
      </field>
    </record>

    <!-- PARTNER -->

    <record model="ir.ui.view" id="partner_ruc_form_view">
      <field name="name">partner.ruc</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="parent_id" position="before">
          <field name="kind_i"/>
          <field name="identifier"/>
        </field>
        <xpath expr="//field[@name='vat']" position="replace">
            <field name="kind_p"/>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="partner_ruc_tree_view">
      <field name="name">view.partner.tree</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_tree"/>
      <field name="arch" type="xml">
        <xpath expr="/tree/field[@name='display_name']" position="before">
          <field name="identifier"/>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="ruc_search_view">
      <field name="name">view.partner.search</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <search>
          <field name="identifier"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="partner_select_view">
      <field name="name">view.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
          <field name="name" position="before">
            <field name="identifier"/>
            <field name="ref"/>
          </field>
        </field>
      </record>

  </data>
</odoo>
